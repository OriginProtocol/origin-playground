{
  "author": "Nick Poulden",
  "name": "identity-playground",
  "version": "0.1.0",
  "license": "MIT",
  "description": "Working implementation and demonstration of ERC 725",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/OriginProtocol/identity-playground.git"
  },
  "scripts": {
    "test": "mocha -r @babel/register test -t 10000",
    "test:watch": "mocha -r @babel/register -w --watch-extensions sol -t 5000 test",
    "start": "node -r @babel/register index",
    "build:contracts": "BUILD=1 mocha -r @babel/register -t 10000 test",
    "build:js": "webpack --config webpack.prod.js --progress",
    "build:css": "NODE_ENV=CSS node -r @babel/register -r ./scripts/jsdom -r ./src/pages/App -e \"console.log(require('react-styl').getCss())\" > public/css/app.css",
    "build": "npm run build:js && npm run build:css",
    "lint": "eslint .",
    "prettier": "find ./src -iname '*.js' | xargs ./node_modules/.bin/prettier --write",
    "clean": "rm -rf data/db && rm -rf data/ipfs && rm -rf data/geth",
    "geth": "geth --nodiscover --datadir ./data/geth --maxpeers 0 --dev --rpc --ws --wsorigins=* --rpccorsdomain=* --rpcaddr=0.0.0.0 --wsaddr=0.0.0.0 --rpcvhosts=*"
  },
  "dependencies": {
    "@babel/core": "^7.1.2",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "^7.0.0",
    "@blueprintjs/core": "^3.6.1",
    "@blueprintjs/datetime": "^3.2.0",
    "@blueprintjs/table": "^3.1.1",
    "ajv": "^6.5.4",
    "apollo-cache-inmemory": "^1.2.10",
    "apollo-client": "^2.4.2",
    "apollo-link": "^1.2.3",
    "apollo-link-schema": "^1.1.1",
    "apollo-link-state": "^0.4.2",
    "apollo-server": "^2.1.0",
    "babel-plugin-module-resolver": "^3.1.1",
    "body-parser": "^1.18.3",
    "bs58": "^4.0.1",
    "date-fns": "^1.29.0",
    "express": "^4.16.3",
    "express-session": "^1.15.6",
    "ganache-core": "2.2.1",
    "graphiql": "^0.12.0",
    "graphql": "^14.0.2",
    "graphql-subscriptions": "^1.0.0",
    "graphql-tag": "^2.10.0",
    "graphql-tools": "^4.0.0",
    "ipfs": "^0.32.3",
    "ipfs-api": "^24.0.2",
    "jsdom": "^12.1.0",
    "node-fetch": "^2.2.0",
    "oauth": "^0.9.15",
    "openzeppelin-solidity": "^1.12.0",
    "prettier": "^1.14.3",
    "react": "^16.5.2",
    "react-apollo": "^2.2.4",
    "react-dom": "^16.5.2",
    "react-styl": "^0.0.3",
    "serve-static": "^1.13.2",
    "solc": "^0.4.25",
    "subscriptions-transport-ws": "^0.9.15",
    "superagent": "^4.0.0-beta.5",
    "web3": "^1.0.0-beta.36"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "bracketSpacing": true
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ],
    "plugins": [
      [
        "module-resolver",
        {
          "alias": {
            "actions": "./src/actions",
            "components": "./src/components",
            "constants": "./src/constants",
            "contracts": "./src/contracts",
            "pages": "./src/pages",
            "reducers": "./src/reducers",
            "utils": "./src/utils"
          }
        }
      ],
      [
        "@babel/plugin-proposal-decorators",
        {
          "legacy": true
        }
      ],
      "@babel/plugin-proposal-export-default-from",
      "@babel/plugin-transform-runtime",
      "@babel/plugin-transform-destructuring",
      "@babel/plugin-transform-object-assign",
      "@babel/plugin-proposal-object-rest-spread",
      "@babel/plugin-proposal-class-properties"
    ]
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/plugin-proposal-decorators": "^7.1.2",
    "@babel/plugin-proposal-export-default-from": "^7.0.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/plugin-syntax-object-rest-spread": "^7.0.0",
    "@babel/plugin-transform-destructuring": "^7.1.2",
    "@babel/plugin-transform-object-assign": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.1.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/runtime": "^7.1.2",
    "apollo-cache-persist": "^0.1.1",
    "apollo-link-http": "^1.5.5",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.4",
    "babel-plugin-transform-decorators": "^6.24.1",
    "clean-webpack-plugin": "^0.1.19",
    "cli-table": "^0.3.1",
    "css-loader": "^1.0.0",
    "eslint": "^5.6.1",
    "eslint-plugin-babel": "^5.2.1",
    "eslint-plugin-react": "^7.11.1",
    "file-loader": "^2.0.0",
    "ignore-loader": "^0.1.2",
    "mini-css-extract-plugin": "^0.4.3",
    "normalize.css": "^8.0.0",
    "opener": "^1.5.1",
    "react-router": "^4.3.1",
    "react-router-dom": "^4.3.1",
    "style-loader": "^0.23.0",
    "url-loader": "^1.1.1",
    "webpack": "^4.20.2",
    "webpack-cli": "^3.1.2",
    "webpack-dev-middleware": "^3.4.0",
    "webpack-dev-server": "^v3.1.9"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true,
        "impliedStrict": true,
        "legacyDecorators": true
      }
    },
    "globals": {
      "Web3": true,
      "web3": true,
      "OfficialIdentities": true,
      "openpgp": true
    },
    "env": {
      "browser": true,
      "node": true,
      "es6": true,
      "mocha": true
    },
    "plugins": [
      "react"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
    ],
    "rules": {
      "react/prop-types": "off",
      "react/no-children-prop": "off",
      "no-console": "off"
    }
  },
  "eslintIgnore": [
    "node_modules",
    "public"
  ]
}
